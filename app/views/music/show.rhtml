                                        <div class='clear'></div>
					<hr style="border-top: 1px dashed #8c8b8b;"/>
				<% end %>
			<HR/>
	<% else %>
          <br />
          <br />
          <br />
          <br />
          <br />
          <br />
          <br />
          <br />
          <br />
          <br /> <!-- make footer look like a footer LOL -->
       <% end %>
       <% if @product.lyrics.present? %>
          Lyrics: <%= h @product.lyrics.gsub("\n", "<br/>") %>
